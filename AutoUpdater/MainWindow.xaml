<Window x:Class="AutoUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoUpdater"
        mc:Ignorable="d"
        Title="SC-SR Auto Updater" Height="150" Width="300" Closing="OnClosing"
        Background="#1f2022">
    <StackPanel Height="100" Width="300" HorizontalAlignment="Center" >
        <Label x:Name="Status" Foreground="LightBlue" Content="Downloading SC-SR Update" HorizontalAlignment="Center" Margin="0,0,0,0" />
        <ProgressBar x:Name="DownloadProgress" Minimum="0" Maximum="100" HorizontalAlignment="Center" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" Width="220" Background="DarkGray"/>

        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="80" Click="CancelButtonClick"/>


    </StackPanel>
</Window>
